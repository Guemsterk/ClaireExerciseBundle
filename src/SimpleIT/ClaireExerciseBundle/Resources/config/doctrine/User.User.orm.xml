<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SimpleIT\ClaireExerciseBundle\Entity\User\User" table="claire_user" repository-class="SimpleIT\ClaireExerciseBundle\Repository\User\UserRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="username" column="username" type="string" length="255" nullable="false" unique="true"/>
        <field name="firstname" column="firstname" type="string" length="255" nullable="true"/>
        <field name="lastname" column="lastname" type="string" length="255" nullable="true"/>
        <field name="salt" column="salt" type="string" length="255" nullable="false"/>
        <field name="password" column="password" type="string" length="255" nullable="false"/>
        <field name="email" column="email" type="string" length="255" nullable="true"/>
        <field name="createdAt" column="created_at" type="datetime" nullable="false">
            <gedmo:timestampable on="create"/>
        </field>

        <field name="updatedAt" column="updated_at" type="datetime" nullable="false">
            <gedmo:timestampable on="update"/>
        </field>

        <field name="isActive" column="is_active" type="boolean" nullable="false"/>
    </entity>
</doctrine-mapping>
