<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SimpleIT\ClaireExerciseBundle\Entity\DomainKnowledge\OwnerKnowledge" table="claire_exercise_owner_knowledge" repository-class="SimpleIT\ClaireExerciseBundle\Repository\Exercise\DomainKnowledge\OwnerKnowledgeRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="public" column="public" type="boolean" nullable="false"/>

        <one-to-many target-entity="SimpleIT\ClaireExerciseBundle\Entity\DomainKnowledge\Metadata" mapped-by="ownerKnowledge" field="metadata">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one target-entity="SimpleIT\ClaireExerciseBundle\Entity\DomainKnowledge\Knowledge" field="knowledge" inversed-by="ownerKnowledges">
            <join-column name="knowledge_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <many-to-one target-entity="SimpleIT\ClaireExerciseBundle\Entity\User\User" field="owner">
            <join-column name="owner_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

    </entity>
</doctrine-mapping>
