<?xml version="1.0" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="simple_it.claire.use_cases.course.workflow.change_course_to_published.class">SimpleIT\ClaireAppBundle\UseCases\Course\Workflow\ChangeCourseToPublished</parameter>
        <parameter key="simple_it.claire.use_cases.course.workflow.change_course_to_waiting_for_publication.class">SimpleIT\ClaireAppBundle\UseCases\Course\Workflow\ChangeCourseToWaitingForPublication</parameter>
        <parameter key="simple_it.claire.use_cases.course.content.get_published_content.class">SimpleIT\ClaireAppBundle\UseCases\Course\Content\GetPublishedContent</parameter>
        <parameter key="simple_it.claire.use_cases.course.content.get_waiting_for_publication_content.class">SimpleIT\ClaireAppBundle\UseCases\Course\Content\GetWaitingForPublicationContent</parameter>
        <parameter key="simple_it.claire.use_cases.course.content.get_draft_content.class">SimpleIT\ClaireAppBundle\UseCases\Course\Content\GetDraftContent</parameter>
        <parameter key="simple_it.claire.use_cases.course.edition.save_content.class">SimpleIT\ClaireAppBundle\UseCases\Course\Content\SaveContent</parameter>
    </parameters>

    <services>
        <service id="simple_it.claire.use_cases.course.workflow.change_course_to_published" class="%simple_it.claire.use_cases.course.workflow.change_course_to_published.class%">
            <call method="setCourseGateway">
                <argument type="service" id="simple_it.claire.course.repository.course"/>
            </call>
        </service>
        <service id="simple_it.claire.use_cases.course.workflow.change_course_to_waiting_for_publication" class="%simple_it.claire.use_cases.course.workflow.change_course_to_waiting_for_publication.class%">
            <call method="setCourseGateway">
                <argument type="service" id="simple_it.claire.course.repository.course"/>
            </call>
        </service>

        <!--EDITION-->
        <service id="simple_it.claire.use_cases.course.edition.save_content" class="%simple_it.claire.use_cases.course.edition.save_content.class%">
            <call method="setCourseContentGateway">
                <argument type="service" id="simple_it.claire.course.repository.course_content"/>
            </call>
        </service>

        <!--CONTENT-->
        <service id="simple_it.claire.use_cases.course.content.get_published_content" class="%simple_it.claire.use_cases.course.content.get_published_content.class%">
            <call method="setCourseContentGateway">
                <argument type="service" id="simple_it.claire.course.repository.course_content"/>
            </call>
        </service>
        <service id="simple_it.claire.use_cases.course.content.get_waiting_for_publication_content" class="%simple_it.claire.use_cases.course.content.get_waiting_for_publication_content.class%">
            <call method="setCourseContentGateway">
                <argument type="service" id="simple_it.claire.course.repository.course_content"/>
            </call>
        </service>
        <service id="simple_it.claire.use_cases.course.content.get_draft_content" class="%simple_it.claire.use_cases.course.content.get_draft_content.class%">
            <call method="setCourseContentGateway">
                <argument type="service" id="simple_it.claire.course.repository.course_content"/>
            </call>
        </service>
    </services>
</container>
