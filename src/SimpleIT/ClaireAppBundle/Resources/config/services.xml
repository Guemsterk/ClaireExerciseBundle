<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="simple_it.claire_api.class">SimpleIT\ClaireAppBundle\Api\ClaireApi</parameter>
        <parameter key="simple_it.claire_courses_api.class">SimpleIT\ClaireAppBundle\Api\ClaireCoursesApi</parameter>
        <parameter key="simple_it.claire.http.token.transport.listener.class">Buzz\Listener\BasicAuthListener</parameter>
        <parameter key="simple_it.claire.http.transport.class">SimpleIT\AppBundle\Services\HttpTransport</parameter>
        <parameter key="simple_it.claire.api.token.class">SimpleIT\AppBundle\Api\OAuth2Service</parameter>
        <parameter key="simple_it.claire.tutorial.class">SimpleIT\ClaireAppBundle\Services\TutorialService</parameter>
    </parameters>

    <services>
        <service id="simple_it.claire.http.transport"
                 parent="buzz"
                 class="%simple_it.claire.http.transport.class%">
            <call method="setHost">
                <argument>%simple_it_claire_app.host%</argument>
            </call>
        </service>

        <service id="simple_it.claire.http.token.transport.listener"
                 class="%simple_it.claire.http.token.transport.listener.class%" />

        <service id="simple_it.claire.http.token.transport"
                 parent="buzz"
                 class="%simple_it.claire.http.transport.class%">
            <call method="setHost">
                <argument>%simple_it_claire_app.host%</argument>
            </call>
            <call method="addListener">
                <argument type="service" id="simple_it.claire.http.token.transport.listener" />
            </call>
        </service>

        <service id="simple_it.claire.api.token" class="%simple_it.claire.api.token.class%">
            <call method="setTransportService">
                <argument type="service" id="simple_it.claire.http.token.transport" />
            </call>
        </service>

        <service id="claire_api" class="%simple_it.claire_api.class%" parent="api">
            <call method="setTransportService">
                <argument type="service" id="simple_it.claire.http.transport" />
            </call>
        </service>

        <service id="claire_courses_api" class="%simple_it.claire_courses_api.class%" parent="claire_api" />

        <service id="simpleit.claire.tutorial" class="%simple_it.claire.tutorial.class%" />

    </services>

</container>
