<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="simple_it.claire.user.repository.author.class">SimpleIT\ClaireAppBundle\Repository\User\AuthorRepository</parameter>
        <parameter key="simple_it.claire.user.repository.author_by_course.class">SimpleIT\ClaireAppBundle\Repository\User\AuthorByCourseRepository</parameter>
        <parameter key="simple_it.claire.user.repository.author_by_part.class">SimpleIT\ClaireAppBundle\Repository\User\AuthorByPartRepository</parameter>
        <parameter key="simple_it.claire.user.repository.course_by_author.class">SimpleIT\ClaireAppBundle\Repository\User\CourseByAuthorRepository</parameter>
        <parameter key="simple_it.claire.user.author.class">SimpleIT\ClaireAppBundle\Services\User\AuthorService</parameter>
    </parameters>

    <services>
        <service id="simple_it.claire.user.repository.author" class="%simple_it.claire.user.repository.author.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.user.repository.author_by_course" class="%simple_it.claire.user.repository.author_by_course.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.user.repository.author_by_part" class="%simple_it.claire.user.repository.author_by_part.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.user.repository.course_by_author" class="%simple_it.claire.user.repository.course_by_author.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.user.author" class="%simple_it.claire.user.author.class%">
            <call method="setAuthorRepository">
                <argument type="service" id="simple_it.claire.user.repository.author"/>
            </call>
            <call method="setAuthorByCourseRepository">
                <argument type="service" id="simple_it.claire.user.repository.author_by_course"/>
            </call>
            <call method="setAuthorByPartRepository">
                <argument type="service" id="simple_it.claire.user.repository.author_by_part"/>
            </call>
            <call method="setCourseByAuthorRepository">
                <argument type="service" id="simple_it.claire.user.repository.course_by_author"/>
            </call>
        </service>
    </services>
</container>
