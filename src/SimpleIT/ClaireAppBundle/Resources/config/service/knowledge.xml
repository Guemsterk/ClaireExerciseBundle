<?xml version="1.0" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="simple_it.exercise.knowledge.class">SimpleIT\ExerciseBundle\Service\DomainKnowledge\KnowledgeService</parameter>
        <parameter key="simple_it.exercise.entity.knowledge.class">SimpleIT\ExerciseBundle\Entity\DomainKnowledge\Knowledge</parameter>
        <parameter key="simple_it.exercise.repository.knowledge.class">SimpleIT\ExerciseBundle\Repository\DomainKnowledge\KnowledgeRepository</parameter>

        <parameter key="simple_it.exercise.knowledge.formula.class">SimpleIT\ExerciseBundle\Service\DomainKnowledge\FormulaService</parameter>

        <parameter key="simple_it.exercise.owner_knowledge.class">SimpleIT\ExerciseBundle\Service\DomainKnowledge\OwnerKnowledgeService</parameter>
        <parameter key="simple_it.exercise.entity.owner_knowledge.class">SimpleIT\ExerciseBundle\Entity\DomainKnowledge\OwnerKnowledge</parameter>
        <parameter key="simple_it.exercise.repository.owner_knowledge.class">SimpleIT\ExerciseBundle\Repository\DomainKnowledge\OwnerKnowledgeRepository</parameter>

        <parameter key="simple_it.exercise.knowledge_metadata.class">SimpleIT\ExerciseBundle\Service\DomainKnowledge\MetadataService</parameter>
        <parameter key="simple_it.exercise.entity.knowledge_metadata.class">SimpleIT\ExerciseBundle\Entity\DomainKnowledge\Metadata</parameter>
        <parameter key="simple_it.exercise.repository.knowledge_metadata.class">SimpleIT\ExerciseBundle\Repository\DomainKnowledge\MetadataRepository</parameter>
    </parameters>

    <services>
        <!-- Repository -->
        <service id="simple_it.exercise.repository.knowledge" factory-service="doctrine.orm.entity_manager" factory-method="getRepository" class="%simple_it.exercise.repository.knowledge.class%">
            <argument>%simple_it.exercise.entity.knowledge.class%</argument>
        </service>

        <service id="simple_it.exercise.repository.owner_knowledge" factory-service="doctrine.orm.entity_manager" factory-method="getRepository" class="%simple_it.exercise.repository.owner_knowledge.class%">
            <argument>%simple_it.exercise.entity.owner_knowledge.class%</argument>
        </service>

        <service id="simple_it.exercise.repository.knowledge_metadata" factory-service="doctrine.orm.entity_manager" factory-method="getRepository" class="%simple_it.exercise.repository.knowledge_metadata.class%">
            <argument>%simple_it.exercise.entity.knowledge_metadata.class%</argument>
        </service>

        <!-- General services -->
        <service id="simple_it.exercise.knowledge" class="%simple_it.exercise.knowledge.class%">
            <call method="setEntityManager">
                <argument type="service" id="doctrine.orm.entity_manager"/>
            </call>
            <call method="setKnowledgeRepository">
                <argument type="service" id="simple_it.exercise.repository.knowledge"/>
            </call>
            <call method="setFormulaService">
                <argument type="service" id="simple_it.exercise.knowledge.formula"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="jms_serializer.serializer"/>
            </call>
            <call method="setUserService">
                <argument type="service" id="simple_it.user.user"/>
            </call>
        </service>

        <service id="simple_it.exercise.owner_knowledge" class="%simple_it.exercise.owner_knowledge.class%">
            <call method="setEntityManager">
                <argument type="service" id="doctrine.orm.entity_manager"/>
            </call>
            <call method="setOwnerKnowledgeRepository">
                <argument type="service" id="simple_it.exercise.repository.owner_knowledge"/>
            </call>
            <call method="setMetadataService">
                <argument type="service" id="simple_it.exercise.knowledge_metadata"/>
            </call>
            <call method="setUserService">
                <argument type="service" id="simple_it.user.user"/>
            </call>
            <call method="setKnowledgeService">
                <argument type="service" id="simple_it.exercise.knowledge"/>
            </call>
        </service>

        <service id="simple_it.exercise.knowledge_metadata" class="%simple_it.exercise.knowledge_metadata.class%">
            <call method="setEntityManager">
                <argument type="service" id="doctrine.orm.entity_manager"/>
            </call>
            <call method="setMetadataRepository">
                <argument type="service" id="simple_it.exercise.repository.knowledge_metadata"/>
            </call>
            <call method="setOwnerKnowledgeService">
                <argument type="service" id="simple_it.exercise.owner_knowledge"/>
            </call>
        </service>

        <!-- Specific knowledge services -->
        <service id="simple_it.exercise.knowledge.formula" class="%simple_it.exercise.knowledge.formula.class%"/>
    </services>
</container>
