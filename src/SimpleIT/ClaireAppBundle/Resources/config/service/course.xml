<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!--COURSE-->
        <parameter key="simple_it.claire.course.course.class">SimpleIT\ClaireAppBundle\Services\Course\CourseService</parameter>
        <parameter key="simple_it.claire.course.repository.course.class">SimpleIT\ClaireAppBundle\Repository\Course\CourseRepository</parameter>
        <parameter key="simple_it.claire.course.repository.course_content.class">SimpleIT\ClaireAppBundle\Repository\Course\CourseContentRepository</parameter>
        <parameter key="simple_it.claire.course.repository.course_introduction.class">SimpleIT\ClaireAppBundle\Repository\Course\CourseIntroductionRepository</parameter>
        <parameter key="simple_it.claire.course.repository.course_toc.class">SimpleIT\ClaireAppBundle\Repository\Course\CourseTocRepository</parameter>

        <!--PART-->
        <parameter key="simple_it.claire.course.part.class">SimpleIT\ClaireAppBundle\Services\Course\PartService</parameter>
        <parameter key="simple_it.claire.course.repository.part.class">SimpleIT\ClaireAppBundle\Repository\Course\PartRepository</parameter>
        <parameter key="simple_it.claire.course.repository.part_content.class">SimpleIT\ClaireAppBundle\Repository\Course\PartContentRepository</parameter>
        <parameter key="simple_it.claire.course.repository.part_introduction.class">SimpleIT\ClaireAppBundle\Repository\Course\PartIntroductionRepository</parameter>
        <parameter key="simple_it.claire.course.repository.part_toc.class">SimpleIT\ClaireAppBundle\Repository\Course\PartTocRepository</parameter>

        <!--METADATA-->
        <parameter key="simple_it.claire.course.metadata.class">SimpleIT\ClaireAppBundle\Services\Course\MetadataService</parameter>
        <parameter key="simple_it.claire.course.repository.metadata_by_course.class">SimpleIT\ClaireAppBundle\Repository\Course\MetadataByCourseRepository</parameter>
        <parameter key="simple_it.claire.course.repository.metadata_by_part.class">SimpleIT\ClaireAppBundle\Repository\Course\MetadataByPartRepository</parameter>

    </parameters>

    <services>
        <!--COURSE-->
        <service id="simple_it.claire.course.repository.course" class="%simple_it.claire.course.repository.course.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.course.repository.course_content" class="%simple_it.claire.course.repository.course_content.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.course.repository.course_introduction" class="%simple_it.claire.course.repository.course_introduction.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.course.repository.course_toc" class="%simple_it.claire.course.repository.course_toc.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.course.course" class="%simple_it.claire.course.course.class%">
            <call method="setCourseRepository">
                <argument type="service" id="simple_it.claire.course.repository.course"/>
            </call>
            <call method="setCourseContentRepository">
                <argument type="service" id="simple_it.claire.course.repository.course_content"/>
            </call>
            <call method="setCourseIntroductionRepository">
                <argument type="service" id="simple_it.claire.course.repository.course_introduction"/>
            </call>
            <call method="setCourseTocRepository">
                <argument type="service" id="simple_it.claire.course.repository.course_toc"/>
            </call>
        </service>

        <!--PART-->
        <service id="simple_it.claire.course.repository.part" class="%simple_it.claire.course.repository.part.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.course.repository.part_introduction" class="%simple_it.claire.course.repository.part_introduction.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.course.repository.part_content" class="%simple_it.claire.course.repository.part_content.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.course.repository.part_toc" class="%simple_it.claire.course.repository.part_toc.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.course.part" class="%simple_it.claire.course.part.class%">
            <call method="setPartContentRepository">
                <argument type="service" id="simple_it.claire.course.repository.part_content"/>
            </call>
            <call method="setPartIntroductionRepository">
                <argument type="service" id="simple_it.claire.course.repository.part_introduction"/>
            </call>
            <call method="setPartRepository">
                <argument type="service" id="simple_it.claire.course.repository.part"/>
            </call>
            <call method="setPartTocRepository">
                <argument type="service" id="simple_it.claire.course.repository.part_toc"/>
            </call>
            <call method="setCourseTocRepository">
                <argument type="service" id="simple_it.claire.course.repository.course_toc"/>
            </call>
        </service>

        <!--METADATA-->
        <service id="simple_it.claire.course.repository.metadata_by_course" class="%simple_it.claire.course.repository.metadata_by_course.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.course.repository.metadata_by_part" class="%simple_it.claire.course.repository.metadata_by_part.class%">
            <call method="setClient">
                <argument type="service" id="simple_it.claire.http_client"/>
            </call>
            <call method="setSerializer">
                <argument type="service" id="simple_it.claire.serializer"/>
            </call>
        </service>

        <service id="simple_it.claire.course.metadata" class="%simple_it.claire.course.metadata.class%">
            <call method="setMetadataByCourseRepository">
                <argument type="service" id="simple_it.claire.course.repository.metadata_by_course"/>
            </call>
            <call method="setMetadataByPartRepository">
                <argument type="service" id="simple_it.claire.course.repository.metadata_by_part"/>
            </call>
        </service>
    </services>
</container>
