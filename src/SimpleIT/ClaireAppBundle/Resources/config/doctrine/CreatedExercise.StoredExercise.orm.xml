<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SimpleIT\ExerciseBundle\Entity\CreatedExercise\StoredExercise" table="claire_exercise_stored_exercise" repository-class="SimpleIT\ExerciseBundle\Repository\CreatedExercise\StoredExerciseRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="content" column="content" type="text" nullable="false"/>

        <one-to-many target-entity="SimpleIT\ExerciseBundle\Entity\CreatedExercise\Item" mapped-by="exercise" field="items">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="SimpleIT\ExerciseBundle\Entity\CreatedExercise\Attempt" mapped-by="exercise" field="attempts">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="SimpleIT\ExerciseBundle\Entity\Test\TestPosition" mapped-by="exercise" field="testPositions">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one target-entity="SimpleIT\ExerciseBundle\Entity\ExerciseModel\OwnerExerciseModel" field="ownerExerciseModel">
            <join-column name="owner_exercise_model_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

    </entity>
</doctrine-mapping>
