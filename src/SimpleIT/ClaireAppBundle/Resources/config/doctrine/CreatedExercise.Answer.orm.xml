<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SimpleIT\ExerciseBundle\Entity\CreatedExercise\Answer" table="claire_exercise_answer" repository-class="SimpleIT\ExerciseBundle\Repository\CreatedExercise\AnswerRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="content" column="content" type="text" nullable="false"/>

        <many-to-one target-entity="SimpleIT\ExerciseBundle\Entity\CreatedExercise\Item" field="item">
            <join-column name="item_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <many-to-one target-entity="SimpleIT\ExerciseBundle\Entity\CreatedExercise\Attempt" field="attempt">
            <join-column name="attempt_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
