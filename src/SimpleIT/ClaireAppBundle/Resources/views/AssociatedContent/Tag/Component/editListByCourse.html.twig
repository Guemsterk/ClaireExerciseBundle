<form class="form" action="{{ path('simple_it_claire_component_course_course_metadata_description_edit', { 'courseId': courseId}) }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}
    {{ form_errors(form.tags) }}

    <div class="input-group fullwidth with-border flat js-tags-select" data-option_json-value="true"  data-option_data="{{ form.tags.vars.value }}" data-option_data-url="{{ searchAction }}">
        {{ form_widget(form.tags, { 'value': '' }) }}
        <i class="indicator icon-large icon-spinner icon-spin"></i>
    </div>

    {{ form_rest(form) }}
    <input type="submit">
</form>
